    "react-dom": "18.2.0",
    "react-icons": "^5.1.0",
    "tailwindcss": "^3.4.1",
    "three": "^0.164.0",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "zustand": "^4.5.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "\\.venv($|/)",
          "venv($|/)",
          "\\.git($|/)",
          "node_modules($|/)"
        ],
        "asar": {
          "unpack": "**/*.{node,dll}"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
